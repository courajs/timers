{{#each this.state.timers as |timer|}}
  <p>
    <button class="p-1 m-1 border shadow" onclick={{action this.state.toggle timer}}>
      {{#if (and this.state.running (eq this.state.current timer))}}
        {{fa-icon "pause"}}
      {{else}}
        {{fa-icon "play"}}
      {{/if}}
    </button>
    {{timer.name}}: {{timer.displayMinutes}}
    <button class="p-1 m-1 border shadow text-red float-right" onclick={{action this.state.delTimer timer}}>X</button>
  </p>
{{/each}}
<button class="p-1 m-1 border shadow" onclick={{action this.state.zeroAll}}>Zero all</button>
